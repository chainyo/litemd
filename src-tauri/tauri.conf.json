{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LiteMD",
  "version": "0.1.0",
  "identifier": "com.chainyo.litemd",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1430",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LiteMD",
        "width": 900,
        "height": 1100,
        "minWidth": 900,
        "minHeight": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
